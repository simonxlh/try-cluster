sudo kubectl -n kubesphere-system create secret generic kubesphere-ca  \
--from-file=ca.crt= /home/brosoul/.minikube/ca.crt  \
--from-file=ca.key= /home/brosoul/.minikube/ca.key

sudo kubectl -n kubesphere-monitoring-system create secret generic kube-etcd-client-certs  \
--from-file=etcd-client-ca.crt=/var/lib/minikube/certs/etcd/ca.crt  \
--from-file=etcd-client.crt=/var/lib/minikube/certs/etcd/healthcheck-client.crt  \
--from-file=etcd-client.key=/var/lib/minikube/certs/etcd/healthcheck-client.key

